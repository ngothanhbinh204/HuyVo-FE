include ../../global/ProductItem/ProductItem
include ../../global/ShopToolbar/ShopToolbar

section.section-moderne-heritage
	//- Reuse Banner from Shop
	.shop-banner
		+PugImg('./img/aodai4.png')

	.container.max-w-full
		//- Description (Reuse Shop)
		.shop-description
			p MADAME HUY VO'S AO DAI IS A BLEND OF THE PRECIOUS HERITAGE OF THE TRADITIONAL DRESS WITH CONTEMPORARY BEAUTY, REPRESENTING A SEAMLESS CONNECTION BETWEEN THE PAST, PRESENT, AND FUTURE.

		//- Breadcrumb
		.breadcrumb-wrapper
			ul.breadcrumb
				li
					a(href="/") HOME
				li
					span /
				li
					a(href="#") SHOP
				li
					span /
				li
					span.active MODERNE HERITAGE

		//- Page Title
		h1.page-title MODERNE HERITAGE

		//- Filter Toolbar (Component)
		+ShopToolbar(12)

		//- Category Blocks Wrapper
		.moderne-heritage-content
			//- Category Block 1: AO DAI MADAME
			.category-block
				.category-block-header
					h2.category-title AO DAI MADAME
					a.view-all-link(href="#") VIEW ALL
				
				.slider-wrapper
					.nav-btn.nav-prev
						i.fa-light.fa-chevron-left
					.category-product-slider
						.swiper
							.swiper-wrapper
								- for(var i = 1; i <= 6; i++)
									.swiper-slide
										-
											var productMadame = {
												name: "LẬP HỒNG XUÂN SAKURA",
												price: "7.700.000 ₫",
												imgPrimary: "./img/aodai1.png",
												imgHover: "./img/aodai4.png",
												link: "#",
												sizes: ["XS", "S", "M", "L"],
												colors: [
													{ color: "#000080", name: "Navy" },
													{ color: "#F5F5DC", name: "Beige" }
												]
											}
										+ProductItemSwap(productMadame)
					.nav-btn.nav-next
						i.fa-light.fa-chevron-right

			//- Category Block 2: AO DAI MONSIEUR
			.category-block
				.category-block-header
					h2.category-title AO DAI MONSIEUR
					a.view-all-link(href="#") VIEW ALL
				
				.slider-wrapper
					.nav-btn.nav-prev
						i.fa-light.fa-chevron-left
					.category-product-slider
						.swiper
							.swiper-wrapper
								- for(var i = 1; i <= 6; i++)
									.swiper-slide
										-
											var productMonsieur = {
												name: "LẬP HỒNG XUÂN SAKURA",
												price: "7.700.000 ₫",
												imgPrimary: "./img/aodai3.png",
												imgHover: "./img/aodai4.png",
												link: "#",
												sizes: ["S", "M", "L", "XL"],
												colors: [
													{ color: "#2F4F4F", name: "Dark Slate" },
													{ color: "#8B4513", name: "Brown" }
												]
											}
										+ProductItemSwap(productMonsieur)
					.nav-btn.nav-next
						i.fa-light.fa-chevron-right

